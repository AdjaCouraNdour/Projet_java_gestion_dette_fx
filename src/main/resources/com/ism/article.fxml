<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ism.controllers.ArticleController"
      spacing="10" alignment="center" padding="20">

    <!-- Titre du formulaire -->
    <Label text="Création d'un Article" style="-fx-font-size: 16px;"/>

    <GridPane hgap="10" vgap="10">
        <!-- Libellé -->
        <Label text="Libellé:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="libelleField" promptText="Libellé de l'article" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Prix -->
        <Label text="Prix:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="prixField" promptText="Prix de l'article" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Quantité en stock -->
        <Label text="Quantité en Stock:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="qteStockField" promptText="Quantité disponible" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- État de l'article -->
        <Label text="État de l'article:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="etatArticleComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Bouton pour créer l'article -->
    <Button fx:id="createArticleButton" text="Créer Article" onAction="#createArticle"/>

    <!-- Zone de sortie pour les messages -->
    <TextArea fx:id="outputArea" editable="false" prefHeight="100" wrapText="true"/>

</VBox>
