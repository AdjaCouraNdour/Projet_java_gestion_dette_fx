<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:id="loginPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ism.controllers.LoginController"
          alignment="CENTER" hgap="10" vgap="10">
    
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Nom d'utilisateur" />
    <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Mot de passe" />
    <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <Button fx:id="loginButton" text="Se connecter" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
</GridPane>
