<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ism.Controllers.DetailsController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    
    <Label text="Sélectionnez un article :"/>
    <ComboBox fx:id="articleComboBox" prefWidth="200"/>
    
    <Label text="Quantité :"/>
    <TextField fx:id="qteField" promptText="Entrez la quantité" prefWidth="200"/>

    <Button text="Valider" onAction="#createDetails" prefWidth="100"/>
</VBox>
